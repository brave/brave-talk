{
  "compilerOptions": {
    "outDir": "tsbuild",
    "strict": true,
    "module": "ES2020",
    "target": "ES2018",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
}
