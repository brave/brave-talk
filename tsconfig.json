{
  "compilerOptions": {
    "outDir": "tsbuild",
    "strict": true,
    "module": "ES2020",
    "target": "ES2017",
    "jsx": "react-jsx",
    "allowJs": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
